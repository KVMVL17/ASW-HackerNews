	<center>
		<table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
        	<tr>
        		<td bgcolor="#ff6600">
        			<table border="0" cellpadding="0" cellspacing="0" width="100%" style="padding:2px">
        				<tr>
                  <td style="line-height:12pt; height:10px;">
                  	<span class="pagetop">
                  		<b class="hnname">
                  		  <%= link_to 'Hacker News',"/" %>
                  			</b> | 
              					<%= link_to 'newest', "/newest"%> |
              					<%= link_to 'submit', "/submit"%> |
              					<%= link_to 'login', "/login"%>
              				</span>
              			</td>
              		</tr>
              	</table>
              </td>
            </tr>
            <tr id="pagespace" title="" style="height:10px"></tr>
            <tr>
              <td>
                <%counter = 1%>
                <table border="0" cellpadding="0" cellspacing="0" class="itemlist">
                  <% @contributions.each do |contribution| %>
                    <tr>
                      <% if contribution.text_is_blank? %>
                       <td><%=counter%>.</td>
                       <td><%= contribution.title%></td>
                       <td>(<%= link_to contribution.url, contribution.url, {:style => 'text-decoration:none;'} %>)</td>
                       <%= render 'timer', contribution: contribution %>
                       <td><%=contribution.points%> points</td>
                      
                       <td><%= link_to 'Like','/'+contribution.id.to_s , method: :put%></td>
                       <td><%= link_to 'Edit', edit_contribution_path(contribution)%></td>
                       <td><%= link_to 'Destroy', contribution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                       <%counter = counter + 1%>
                      <%end%>
                    </tr>
                  <% end %>
                </table>
              </td>
            </tr>
        </table>
    </center>

<p id="notice"><%= notice %></p>
